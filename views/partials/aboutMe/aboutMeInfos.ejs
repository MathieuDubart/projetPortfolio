<% isTextLeft = true;
    for(let i=0; i < parsed_about_desc.images.length; i++){ %>
        <div class="row about-rows d-flex flex-row">
            <% if(isTextLeft == true){ %>
                <div class="col-2"></div>

                <div class="col-4 d-flex flex-column justify-content-center align-items-start">
                    <%- parsed_about_desc.textes[i] %>
                </div>

                <div class="col-2"></div>
                
                <div class="img-container col-2 d-flex flex-column justify-content-center align-items-center">
                    <img src="<%- parsed_about_desc.images[i] %>">
                </div>
                <div class="col-2"></div>
            </div>
                <% isTextLeft = false;
            } else { %>
                <div class="col-2"></div>
                <div class="img-container col-2 d-flex flex-column justify-content-center align-items-center">
                    <img src="<%- parsed_about_desc.images[i] %>">
                </div>

                <div class="col-2"></div>
                
                <div class="col-4 d-flex flex-column justify-content-center align-items-start">
                    <%- parsed_about_desc.textes[i] %>
                </div>
                <div class="col-2"></div>
            </div>
                <% isTextLeft = true; %>
            
            <% }} %>
        

        

<style>
.img-container{
    width: 213px;
    overflow: hidden;
    object-fit: cover;
    aspect-ratio: 1/1;
}
.img-container img{
    width: 213px;
    height: 213px;
    object-fit: cover;
}
.about-rows{
    margin-bottom: 64px;
}
</style>