<% let bool=true;
for (let i=0; i < shotsInfos.length-1; i++){
  if (bool == true){ %>
    <div class="galleryItem titleItem">
      <h2> <span><%- shotsInfos[i].title %></span></h2>
    </div>

    <div class="galleryItem imgItem">
      <img src="<%- shotsInfos[i].images.normal %>">
    </div>
    <% bool = false;
  }else{ %>
    <div class="galleryItem imgItem">
      <img src="<%- shotsInfos[i].images.normal %>">
    </div>

    <div class="galleryItem titleItem">
      <h2> <span><%- shotsInfos[i].title %> </span></h2>
    </div>
    <% bool = true;
  }
} %>


