<script>
  buttons = document.getElementsByClassName("button");
  for (let i=0; i < buttons.length; i++){
    buttons[i].addEventListener("click", () => {
      for (let k=0; k < buttons.length; k++){
        buttons[k].classList.remove("is-checked");
      }
      buttons[i].classList.add("is-checked");

      filterFromUrl = buttons[i].dataset.value
      filterItems(filterFromUrl);
    })
  }
</script>