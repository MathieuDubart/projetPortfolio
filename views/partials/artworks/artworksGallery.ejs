<!-- foreach on Gallery -->

<% let bool=true;
  for (let i=0; i < shotsInfos.length-3; i++){ %>
    <div class="row gallery-items d-flex flex-row <% shotsInfos[i].tags.forEach(tag => { %><%- tag %> <% }) %>" data-id="<%- shotsInfos[i].id %>">
      <% if (bool == true){ %>
        <div class="order-1 col-2 responsive-hidden-col"></div>
        <div class="order-2 col-md-6 col-lg-4 d-flex flex-column justify-content-center align-items-center textGallery">
      <% }else{ %>
        <div class="order-3 col-md-6 col-lg-4 d-flex flex-column justify-content-center align-items-center textGallery">
      <% } %>
          <a href="project/<%- shotsInfos[i].id %>" class="d-flex justify-content-center align-items-center">
            <h2><%- shotsInfos[i].title %></h2>
          </a>
          
          <%- include('../artworks/artworksTags', {i : i}); %>
        </div>
        <% if (bool == false){ %>
          <div class="order-4 col-2 responsive-hidden-col"></div>
        <% } %>
      <% if (bool == true){ %>
        <div class="order-3 col-md-6 col-lg-4 d-flex justify-content-center align-items-center galleryItem imgItem">
      <% }else{ %>
        <div class="order-1 col-2 responsive-hidden-col"></div>
        <div class="order-2 col-md-6 col-lg-4 d-flex justify-content-center align-items-center galleryItem imgItem">
      <% } %>
          <a href="project/<%- shotsInfos[i].id %>">
            <img src="<%- shotsInfos[i].images.normal %>">
          </a>
        </div>
        <% if (bool == true){ %>
          <div class="order-4 col-2 responsive-hidden-col"></div>
        <% } %>
      </div>
      <% bool = !bool;} %>
  <div id="no-item-message" class="no-item-message d-none justify-content-center align-itmes-center ">
    <h4><strong>Aucun projet n'est disponible pour le moment</strong></h4>
  </div>
  


<style>
.tag{
    width: fit-content;
    height: fit-content;
    /* background-color: var(--custom-accent-color); */
    color: var(--custom-title-color);
    font-size: var(--custom-p-size);
    opacity: 0.8;
    padding: 4px 8px;
    border-radius: 12px;
    text-transform: uppercase;
}

.no-item-message{
  margin-top: 64px;
  margin-bottom: 128px;
}
.gallery-items{
  margin-bottom: 64px;
}
a{
  text-decoration: none;
}
.textGallery h2 {
  text-align: center;
  font-weight: var(--custom-h4-weight);
}

@media screen and (max-width: 980px) {
    .responsive-hidden-col {
        display:none!important;
    }
}
</style>

<%- include('./artworksGalleryScript.ejs'); %>